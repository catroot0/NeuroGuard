{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./src/dist",
    "rootDir": "./src/typescript",
    "noEmit": false,
    "skipLibCheck": true,
    "noEmitOnError": true
  }
}
